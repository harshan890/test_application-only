<h1>Listing messages</h1>

<table>
  <tr>
    <th>From name</th>
    <th>From email</th>
    <th>To name</th>
    <th>To email</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.from_name %></td>
    <td><%= message.from_email %></td>
    <td><%= message.to_name %></td>
    <td><%= message.to_email %></td>
    <td><%= message.title %></td>
    <td><%= message.description %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

